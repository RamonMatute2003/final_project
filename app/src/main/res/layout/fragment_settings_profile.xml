<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".Fragment.Fragment_settings_profile" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/btn_delete_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/delete_symbol" />

                <TextView
                    android:id="@+id/btn_edit_photo"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/symbol_edit" />
            </LinearLayout>

            <EditText
                android:id="@+id/txt_name1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/border_radius_background"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="text"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txt_account1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/border_radius_background"
                android:ems="10"
                android:enabled="false"
                android:hint="Nº cuenta"
                android:inputType="text"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txt_email2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/border_radius_background"
                android:ems="10"
                android:hint="Correo electronico"
                android:inputType="text"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/sp_careers2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/border_radius_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/birthdate1"
                    android:layout_width="269dp"
                    android:layout_height="50dp"
                    android:background="@drawable/border_radius_background"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Fecha de nacimiento"
                    android:inputType="datetime|date"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btn_calendar1"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />
            </LinearLayout>

            <EditText
                android:id="@+id/txt_phone1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/border_radius_background"
                android:ems="10"
                android:hint="Telefono"
                android:inputType="text"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txt_dni1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/border_radius_background"
                android:ems="10"
                android:hint="DNI"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="20dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_friends"
                    android:layout_width="103dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:text="Amigos: 0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/btn_edit_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/symbol_edit" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_update_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="85dp"
                android:background="@drawable/background_transparent"
                android:text="Cambiar contraseña"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="85dp"
                android:background="@drawable/background_buttons"
                android:text="Guardar cambios"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_discard_changes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="85dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_buttons"
                android:text="Descartar cambios"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@null" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>